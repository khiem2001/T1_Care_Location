<!-- Modal -->
<div
  id="customModal"
  class="fixed inset-0 z-50 hidden bg-black bg-opacity-50 flex items-center justify-center"
>
  <div class="bg-white rounded-lg shadow-lg w-full max-w-md mx-auto p-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-2"><%= title %></h2>
    <p class="text-gray-600 mb-4"><%= description %></p>
    <div class="flex justify-end space-x-2">
      <button
        id="cancelbtn"
        class="px-4 py-2 text-gray-700 bg-gray-200 rounded hover:bg-gray-300 transition"
      >
        <%= cancelText %>
      </button>
      <button
        id="confirmbtn"
        class="px-4 py-2 text-white bg-red-600 rounded hover:bg-red-700 transition"
      >
        <%= okText %>
      </button>
    </div>
  </div>
</div>
